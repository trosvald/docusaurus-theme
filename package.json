{
	"name": "@trosvald/docusaurus-theme",
	"version": "1.0.0",
	"description": "A collection of components and style overrides for Docusaurus pages in monosense projects",
	"private": false,
	"type": "module",
	"main": "dist/trosvald-docusaurus-theme.js",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"watch": "vite build --watch",
		"lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"deploy": "npm run build && npm publish"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss-fluid-type": "^2.0.3"
	},
	"devDependencies": {
		"@infinum/eslint-plugin": "^1.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.1",
		"@types/react": "^18.0.37",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/utils": "^5.61.0",
		"@vitejs/plugin-react": "^4.0.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.38.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"postcss-import": "^15.1.0",
		"postcss-nesting": "^11.3.0",
		"semantic-release": "^24.1.2",
		"tailwindcss": "^3.3.2",
		"vite": "^4.3.9"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/trosvald/docusaurus-theme.git"
	},
	"keywords": [
		"docusaurus",
		"trosvald"
	],
	"author": "trosvald",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/trosvald/docusaurus-theme/issues"
	},
	"homepage": "https://github.com/trosvald/docusaurus-theme#readme",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"release": {
		"repositoryUrl": "https://github.com/trosvald/docusaurus-theme",
		"debug": true,
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			"@semantic-release/github",
			[
				"@semantic-release/changelog",
				{
					"changelogFile": "CHANGELOG.md"
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json",
						"package-lock.json",
						"CHANGELOG.md"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
				}
			]
		],
		"branches": [
			"main"
		]
	}
}
